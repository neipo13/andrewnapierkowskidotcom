						</div>
					{{/games}}
					</div>
				</div>

				<div class="section">
					<h1 id="projects">Other Projects</h1>
					<p></p>
					<div class="list">
					{{#projects}}
						<a class="link preview" data-id="{{id}}">
							<span class="bg" style="background-image: url('img/{{id}}/preview.png');"></span>
							<h2>{{title}}</h2>
						</a>
					{{/projects}}
					</div>
				</div>

				{{> partials/ending}}
			</div>
			<div class="works">
				<div class="back">&lt;&lt; Portfolio</div>
